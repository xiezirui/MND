<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE configuration
                PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>

        <setting name="mapUnderscoreToCamelCase" value="true"/>

        <setting name="cacheEnabled" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.mnd.pojo.User" alias="User"/>
        <typeAlias type="com.mnd.pojo.File" alias="File"/>
        <typeAlias type="com.mnd.pojo.Share" alias="Share"/>
    </typeAliases>

    <mappers>
        <mapper resource="com/mnd/dao/UserMapper.xml"/>
        <mapper resource="com/mnd/dao/FileMapper.xml"/>
        <mapper resource="com/mnd/dao/ShareMapper.xml"/>
    </mappers>
</configuration>